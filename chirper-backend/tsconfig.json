{
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "target": "ES6",
        "useDefineForClassFields": true,
        "module": "CommonJS",
        "skipLibCheck": true,
        "sourceMap": false,

        /* Bundler mode */
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        "paths": {
            "@/*": ["src/*"],
            "@db/*": ["db/*"]
        }
    },
    "include": ["src"]
}
